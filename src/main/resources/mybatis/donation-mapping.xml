<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Donation">
    <!-- 상품 목록 -->
    <select id="donationList" resultType="DonationDTO">
        <![CDATA[
        select donationNum,
               donationName,
               donationMaxPrice,
               gdsDate
        from Donation_Projects
        order by donationNum desc
        ]]>
    </select>

    <!-- 상품 조회 -->
    <select id="donationView" resultType="DonationDTO">
        <![CDATA[
            select *
            from Donation_Projects
            where donationNum = #{donationNum}
        ]]>
    </select>

</mapper>